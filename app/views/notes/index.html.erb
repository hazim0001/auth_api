


<div class="row">
  <div class="col-sm-6">
    <h1>Notes</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_note_path, class: 'btn btn-primary' do %>
    Add New Note
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Description</th>
            <th>Quantity</th>
            <th>Due date</th>
            
      </tr>
    </thead>

    <tbody>
      <% @notes.each do |note| %>
        <%= content_tag :tr, id: dom_id(note), class: dom_class(note) do %>
          
            <td><%= link_to note.name, note %></td>
          

                      <td><%= note.description %></td>
                      <td><%= note.quantity %></td>
                      <td><%= note.due_date %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
